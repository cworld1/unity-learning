# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# Set default charset
charset = utf-8

# 4 space indentation
[*.cs]
indent_style = space
indent_size = 4

# Unity files
[*.{meta, unity, asset}]
indent_style = space
indent_size = 2

# Project desc
[*.sln]
indent_style = tab
indent_size = 4

# Matches the exact files either manifest.json or packages-lock.json
[{manifest.json, packages-lock.json}]
indent_style = space
indent_size = 2
